MAKE = gmake
SHELL = /bin/sh
VPATH=.
srcdir=$(VPATH)

.PHONY=remake

Makefile:Makefile.in config.status
	@$(SHELL) config.status;$(MAKE) depend

config.status:configure
	@if test -f config.status; then $(SHELL) config.status --recheck; \
	else (cd $(srcdir);test -f configure || autoconf);$(srcdir)/configure --prefix=$(prefix); fi

configure:configure.in
	@cd $(srcdir);autoconf

remake:
	@$(srcdir)/configure --prefix=$(prefix)




