<hitView version="1.0">
   <centralDC>
      <cathodeCyl radius="float" repeat="*">
         <band sector="int" z="float" repeat="*">
            <hit t="float" dE="float" repeat="*" />
         </band>
      </cathodeCyl>
      <ring radius="float" repeat="*">
         <straw phim="float" repeat="*">
            <hit t="float" dE="float" repeat="*" />
            <cdcPoint z="float" phi="float" dradius="float"
                                  dEdx="float" repeat="*" />
         </straw>
      </ring>
   </centralDC>

   <forwardDC>
      <chamber module="int" layer="int" repeat="*">
         <cathodePlane z="float" tau="float" repeat="*">
            <strip u="float" repeat="*">
               <hit t="float" dE="float" repeat="*" />
            </strip>
         </cathodePlane>
         <anodePlane z="float" tau="float" repeat="*">
            <wire u="float" repeat="*">
               <hit t="float" dE="float" repeat="*" />
               <fdcPoint z="float" x="float" y="float" dradius="float"
                                   dEdx="float" repeat="*" />
            </wire>
         </anodePlane>
      </chamber>
   </forwardDC>

   <startCntr>
      <paddle sector="float" repeat="*">
         <hit t="float" dE="float" repeat="*" />
      </paddle>
      <startPoint z="float" r="float" phi="float"
                        dEdx="float" repeat="*" />
   </startCntr>

   <barrelEMcal>
      <module sector="float" repeat="*">
         <upstream>
            <shower t="float" E="float" repeat="*" />
         </upstream>
         <downstream>
            <shower t="float" E="float" repeat="*" />
         </downstream> 
      </module>
      <barrelShower t="float" z="float" phi="float" E="float" repeat="*" />
   </barrelEMcal>
      
   <Cerenkov>
      <section sector="float" repeat="*">
         <flash t="float" pe="float" repeat="*" />
      </section>
   </Cerenkov>

   <forwardTOF>
      <slab y="float" repeat="*">
         <left>
            <hit t="float" dE="float" repeat="*" />
         </left>
         <right>
            <hit t="float" dE="float" repeat="*" />
         </right>
      </slab>
      <tofPoint x="float" y="float" repeat="*" />
   </forwardTOF>

   <forwardEMcal>
      <row row="int" repeat="*">
         <column col="int" repeat="*">
            <shower t="float" E="float" repeat="*" />
         </column>
      </row>
      <forwardShower t="float" x="float" y="float" E="float" repeat="*" />
   </forwardEMcal>
</hitView>
